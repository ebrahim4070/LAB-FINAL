<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="356.0" prefWidth="494.0" spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="QuizController">

    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>

    <Label fx:id="questionLabel" prefHeight="20.0" prefWidth="363.0" text="                                   Question here" wrapText="true">
      <font>
         <Font name="System Bold" size="14.0" />
      </font></Label>

    <RadioButton fx:id="opt1" text="Option 1" />
    <RadioButton fx:id="opt2" text="Option 2" />
    <RadioButton fx:id="opt3" text="Option 3" />
    <RadioButton fx:id="opt4" text="Option 4" />

    <Label fx:id="timerLabel" text="Time Left: 10" />

    <HBox alignment="CENTER" spacing="10">
        <Button onAction="#handleNext" text="Next">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
        <Button onAction="#handleExit" text="Exit">
         <font>
            <Font name="System Bold" size="14.0" />
         </font></Button>
    </HBox>
</VBox>
